<h1>Activity 4</h1>    
<script>
// Activity 3

// Given: 
let x = 15;
let y = 7;
let z = 20;

let largest;
if (x >= y && x >= z){
    largest = x;
}
else if (y >= x && y >= z){
    largest = y;
}
else {
    largest = z;
}

let div = (x%5 === 0) && (y%5 === 0) && (z%5 === 0);
let sum = x + " + " + y + " + " + z + " = " + (x + y + z);
let result = (x + y > z ) ? "Sum is larger" : "Z is larger";

document.write("<p>Largest number: " + largest + "</p>");
document.write("<p>Divisible by 5: " + div + "</p>");
document.write("<p>Sum: " + sum + "</p>");
document.write("<p>Ternary check: " + result + "</p>");


</script>    
</body>
</html>
