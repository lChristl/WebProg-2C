<script>
// Activity 1

// 2 variables
let a = 37;
let b = 6;

// calculate...
/* 
r is remainder
e is exponentiation
f is floor division
*/
let r = a % b;  
let e = a ** b;
let f = Math.floor(a/b);

// calculate ((a + b) * (a - b)) / b
let sum = a+b;
let diff = a-b;
let product = sum*diff;
let result = product / b;

// output for activity 1
document.getElementById("demo1.1").innerHTML=r;
document.getElementById("demo1.2").innerHTML=e;
document.getElementById("demo1.3").innerHTML=f;
document.getElementById("demo1.4").innerHTML=sum;
document.getElementById("demo1.5").innerHTML=diff;
document.getElementById("demo1.6").innerHTML=product;
document.getElementById("demo1.7").innerHTML=result;
</script>   
